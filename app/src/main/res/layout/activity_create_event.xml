<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mwidlok.teambuilder.CreateEventActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:text="Hier bitte den Namen des neuen Events angeben."
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtEventName"
        app:layout_constraintVertical_bias="0.505" />

    <EditText
        android:id="@+id/txtEventName"
        android:layout_width="354dp"
        android:layout_height="35dp"
        android:background="#ffffff"
        tools:layout_editor_absoluteX="15dp"
        android:text="hier ist das textfeld"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.271" />


</android.support.constraint.ConstraintLayout>
